//! Message composer component (Story 2.2 - minimal implementation)
//!
//! This component provides the message input field for the chat interface.
//! For Story 2.2, this is a placeholder that can receive focus
//! but message sending is implemented in Story 3.x.

export component MessageComposer {
    in property <string> recipient: "";
    in property <bool> focused: false;

    Rectangle {
        background: #1f2937;
        border-radius: 8px;
        border-width: 2px;
        border-color: focused ? #0066CC : #374151;
        height: 80px;

        VerticalLayout {
            padding: 12px;
            spacing: 8px;

            // Recipient display
            Text {
                visible: recipient != "";
                text: "Messaging: " + recipient;
                font-size: 12px;
                color: #6b7280;
            }

            // Composer placeholder (not functional in Story 2.2)
            Text {
                text: "Type your message here... (Message sending in Story 3.x)";
                font-size: 14px;
                color: #9ca3af;
                vertical-alignment: center;
            }

            // Focus indicator
            Rectangle {
                visible: focused;
                height: 2px;
                background: #0066CC;
            }
        }
    }
}
