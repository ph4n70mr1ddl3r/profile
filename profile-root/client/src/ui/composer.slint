export component MessageComposer {
    in property <string> recipient: "";
    in property <bool> focused: false;
    in-out property <string> message_text: "";
    callback send_message(string);
    callback enter_pressed();

    property <bool> internal_can_send: message_text != "";

    Rectangle {
        background: #1f2937;
        border-radius: 8px;
        border-width: 2px;
        border-color: focused ? #0066CC : #374151;
        height: 80px;

        VerticalLayout {
            padding: 12px;
            spacing: 8px;

            Text {
                visible: recipient != "";
                text: "Messaging: " + recipient;
                font-size: 12px;
                color: #6b7280;
            }

            HorizontalLayout {
                spacing: 8px;

                TextInput {
                    text: message_text;
                    enabled: true;
                    horizontal-alignment: left;
                    vertical-alignment: center;
                }

                Rectangle {
                    background: internal_can_send ? #0066CC : #6b7280;
                    border-radius: 4px;
                    height: 30px;
                    min-width: 80px;

                    Text {
                        text: "Send";
                        color: #ffffff;
                        horizontal-alignment: center;
                        vertical-alignment: center;
                    }

                    TouchArea {
                        clicked => {
                            if internal_can_send {
                                root.send_message(message_text);
                            }
                        }
                    }
                }
            }
        }
    }
}
