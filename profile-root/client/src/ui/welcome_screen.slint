export component WelcomeScreen {
    width: 100%;
    height: 100%;

    in property <string> status_message: "";
    callback generate_key_pressed;
    callback import_key_pressed;

    Rectangle {
        background: #1a1a2e;

        VerticalLayout {
            padding: 32px;
            spacing: 16px;

            Text {
                text: "Welcome to Profile";
                font-size: 28px;
                color: #ffffff;
                font-weight: 700;
            }

            Text {
                text: "Cryptographically secure messaging with your own private key";
                font-size: 14px;
                color: #999999;
            }

            VerticalLayout {
                spacing: 12px;

                Rectangle {
                    height: 40px;
                    background: #2f80ed;
                    border-radius: 6px;

                    Text { text: "Generate New Key"; color: #ffffff; }
                    TouchArea { clicked => { root.generate_key_pressed(); } }
                }

                Rectangle {
                    height: 40px;
                    background: #333333;
                    border-radius: 6px;

                    Text { text: "Import Existing Key"; color: #ffffff; }
                    TouchArea { clicked => { root.import_key_pressed(); } }
                }
            }

            Text {
                visible: root.status_message != "";
                text: root.status_message;
                font-size: 12px;
                color: #ff6b6b;
            }
        }
    }
}
